{{> header }}
{{> question_header }}
{{> question_prog_header }}

<pre class='code-wrapper'>
	<code>
		<form method='post' action=''>
			<table width=100% height=500 style='background-color: white; border-style:solid; border-color:black; border-width:0px; border-spacing: 10px 10px;'>
				<tr>
					<td>
						Langage : {{exécutable.lang_nom}}
				</tr>
				<tr {{^exécutable.pre_code}} style="display:none;" {{/exécutable.pre_code}}>
					<td colspan=2>
						<textarea id='precode' rows='5' >{{exécutable.pre_code}}</textarea>
					</td>
				</tr>

				<tr>
					<td colspan=2>
						<textarea id='incode' name = 'incode' rows='10' cols='80'>{{exécutable.code}}</textarea>
					</td>
				</tr>  

				<tr {{^exécutable.post_code}} style="display:none;" {{/exécutable.post_code}}>
					<td colspan=2>
						<textarea id='postcode' rows='5' >{{exécutable.post_code}}</textarea>
					</td>
				</tr>
				<tr height=100%></tr> <!-- comble l'espace inutilisé dans la table -->
				<tr>
					<td>
					<ul uk-accordion>
						<li>
							<h5 class="uk-accordion-title">Paramètres </h5>
							<div  class="uk-accordion-content">
								Entrez ici les paramètres passés sur la ligne de commande à votre programme
								<textarea id='params' name = 'params' rows='3' style='width:100%;'>{{exécutable.params}}</textarea>
							</div>
						</li>
					</ul>
					</td>
				</tr>  
				<tr>
					<td>
						<input type=submit name='valider' value='Soumettre' class="uk-button uk-button-default">
					</td>
				</tr>
			</table>

		</form>
	</code>
</pre>  

{{> question_prog_footer }}
{{> question_footer }}
{{> footer }}
