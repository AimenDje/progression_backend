{{> header }}
{{> question_header }}
{{> question_prog_header }}

<pre class='code-wrapper'>
	<code>
		<form method='post' action=''>
			<table width=100% height=500 style='background-color: white; border-style:solid; border-color:black; border-width:0px; border-spacing: 10px 10px;'>
				<tr>
					<td>
						Langage : {{question.lang_nom}}
				</tr>
				<tr {{^question.pre_code}} style="display:none;" {{/question.pre_code}}>
					<td colspan=2>
						<textarea id='precode' rows='5' >{{question.pre_code}}</textarea>
					</td>
				</tr>

				<tr>
					<td colspan=2>
						<textarea id='incode' name = 'incode' rows='10' cols='80'>{{code}}</textarea>
					</td>
				</tr>  

				<tr {{^question.post_code}} style="display:none;" {{/question.post_code}}>
					<td colspan=2>
						<textarea id='postcode' rows='5' >{{question.post_code}}</textarea>
					</td>
				</tr>
				<tr height=100%></tr> <!-- comble l'espace inutilisé dans la table -->
				<tr>
					<td width=50%>
						<h3>Paramètres </h3>
						<textarea id='params' name = 'params' rows='3' style='width:100%;'>{{params}}</textarea>
					</td>
					<td width=50%>
						<h3>Entrées</h3>
						<textarea id='stdin' name = 'stdin' rows='3' style='width:100%';>{{stdin}}</textarea>
					</td>
				</tr>  

			</table>
			<input type=submit name='valider' value='Soumettre' >
		</form>
	</code>
</pre>  

{{> question_prog_footer }}
{{> question_footer }}
{{> footer }}
