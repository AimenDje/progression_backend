{{#résultats.essayé}}
	<ul uk-accordion="multiple: false"> 
		{{#tests}}
			<li
				{{^réussi}}
					class="uk-open"
				{{/réussi}}
			>
				<a class="uk-accordion-title" href="#" style="color: 
						  {{#réussi}}
						  #00994d
						  {{/réussi}}
						  {{^réussi}}
						  #cc0000
						  {{/réussi}}
						  ;">
					{{nom}}
				</a>
				<div class="uk-accordion-content">
					
					<table width=100%>
						
						<tr height=100%></tr> <!-- comble l'espace inutilisé dans la table -->
						{{#params}}
						<tr>
							<td><br>paramètres de ligne de commande
								<code>{{.}}</code></pre><br>
							</td>
						</tr>
						{{/params}}

						<tr>
							<td><br>Entrées
								<p>
									<code>{{stdin}}</code></pre><br>
								</p>
							</td>
						</tr>

						{{#sorties}}
							{{#erreurs}}
								<tr>
									<td colspan=2><br>sortie d'erreur : <br>
										<pre class='code-wrapper'><code>{{erreurs}}</code></pre><br>
									</td>
								</tr>
							{{/erreurs}}
							{{^erreurs}}
								<tr>
									{{#solution}}
										<td witdh=100% valign=top><br>Sortie attendue : <br>
											<pre class='code-wrapper'><code>{{solution}}</code></pre><br>
										</td>
									{{/solution}}
									<td width=50%  valign=top><br>Sortie standard : <br><pre class='code-wrapper'><code>{{output}}</code></pre><br></td>
								</tr>
							{{/erreurs}}
						{{/sorties}}
					</table>
				</div>
			</li>
		{{/tests}}
	</ul>
{{/résultats.essayé}}

<script>
 function betterTab( cm ) {                         
	 if ( cm.somethingSelected() ) {
		 cm.indentSelection( 'add' );
	 } else {
		 cm.replaceSelection( cm.getOption( 'indentWithTabs' )? '\t':
							  Array( cm.getOption( 'indentUnit' ) + 1 ).join( ' ' ), 'end', '+input' );
	 }
 }

 if( document.getElementById( 'precode' ) != null ){
	 var preeditor = CodeMirror.fromTextArea( document.getElementById( 'precode' ),{
		 readOnly: true,
		 lineNumbers: true,
		 {{#première_ligne_éditeur_precode}}
  	     firstLineNumber: {{première_ligne_éditeur_precode}},
		 {{/première_ligne_éditeur_precode}}
		 indentUnit: 4
	 } );
	 preeditor.setSize( null,'100%' );//preeditor.getScrollInfo().height );
 }
 
 if( document.getElementById( 'incode' ) != null ){
	 var editor = CodeMirror.fromTextArea( document.getElementById( 'incode' ),{
		 matchBrackets: true,
		 lineNumbers: true,
		 {{#première_ligne_éditeur_incode}}
	     firstLineNumber: {{première_ligne_éditeur_incode}},
		 {{/première_ligne_éditeur_incode}}
		 readOnly: false,
		 indentUnit: 4,
		 scrollbarStyle: null,
		 extraKeys: { Tab: betterTab }
	 } );
	 editor.setSize( '100%', '100%' );
 }

 if( document.getElementById( 'postcode' ) != null ){
	 var posteditor = CodeMirror.fromTextArea( document.getElementById( 'postcode' ),{
		 readOnly: true,
		 lineNumbers: true,
		 {{#première_ligne_éditeur_incode}}
	     firstLineNumber: {{première_ligne_éditeur_incode}}+editor.doc.lineCount(),
		 {{/première_ligne_éditeur_incode}}
		 indentUnit: 4
	 } );
	 posteditor.setSize( null,'100%' );
	 editor.doc.on( 'change', function( instance, changeObj ){
		 posteditor.setOption( 'firstLineNumber', {{première_ligne_éditeur_incode}}+editor.doc.lineCount() );
	 } );
 }

</script>
