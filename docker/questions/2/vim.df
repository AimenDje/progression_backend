FROM system

RUN apt-get update && apt-get install -y vim && \
  apt-get clean

RUN rm /bin/more /bin/cat /usr/bin/head /usr/bin/tail /bin/grep /usr/bin/tac
RUN echo echo \\\(allons... utilisez vim\\\) > /usr/local/bin/cat
RUN chmod +x /usr/local/bin/cat
RUN ln -s /usr/local/bin/cat /bin/tail
RUN ln -s /usr/local/bin/cat /bin/grep
RUN ln -s /usr/local/bin/cat /bin/head
RUN ln -s /usr/local/bin/cat /bin/more
RUN ln -s /usr/local/bin/cat /bin/cat
